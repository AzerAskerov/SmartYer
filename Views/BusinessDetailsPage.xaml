<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SmartSearch.ViewModels"
             x:Class="SmartSearch.Views.BusinessDetailsPage"
             Title="Business Details">
    <ScrollView>
        <VerticalStackLayout Padding="16">
            <Image x:Name="BusinessImage"
                   HeightRequest="200"
                   Aspect="AspectFill"/>
            
            <Label x:Name="BusinessName"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="0,16,0,8"/>
            
            <Label x:Name="Category"
                   FontSize="16"
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}}"
                   Margin="0,0,0,8"/>
            
            <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="8">
                <Label x:Name="Rating"
                       Grid.Column="0"
                       FontSize="16"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}}"/>
                
                <Label x:Name="ReviewCount"
                       Grid.Column="1"
                       FontSize="16"
                       TextColor="{AppThemeBinding Light={StaticResource Gray500}}"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 