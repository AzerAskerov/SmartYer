<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartSearch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SmartSearch"
    xmlns:views="clr-namespace:SmartSearch.Views"
    Shell.FlyoutBehavior="Disabled">

    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="White"/>
                <Setter Property="Shell.ForegroundColor" Value="#666666"/>
                <Setter Property="Shell.TitleColor" Value="#333333"/>
                <Setter Property="Shell.TabBarBackgroundColor" Value="White"/>
                <Setter Property="Shell.TabBarForegroundColor" Value="#666666"/>
                <Setter Property="Shell.TabBarTitleColor" Value="#666666"/>
                <Setter Property="Shell.TabBarUnselectedColor" Value="#666666"/>
            </Style>
            <Style TargetType="TabBar" BasedOn="{StaticResource BaseStyle}" />
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <Tab Title="Home" Icon="home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Explore" Icon="search">
            <ShellContent
                Title="Explore"
                ContentTemplate="{DataTemplate views:ExplorePage}"
                Route="ExplorePage" />
        </Tab>
        <Tab Title="Profile" Icon="user">
            <ShellContent
                Title="Profile"
                ContentTemplate="{DataTemplate views:ProfilePage}"
                Route="ProfilePage" />
        </Tab>
    </TabBar>

</Shell>
